{
  "dashboard": {
    "title": "Trading System - Main Dashboard",
    "tags": ["trading", "options", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Daily P&L",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "trading_daily_pnl",
            "legendFormat": "Daily P&L (₹)",
            "refId": "A"
          },
          {
            "expr": "trading_unrealized_pnl",
            "legendFormat": "Unrealized P&L (₹)",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "currencyINR", "label": "P&L"},
          {"format": "short", "show": false}
        ]
      },
      {
        "id": 2,
        "title": "Open Positions",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "sum(trading_positions_open)",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto"
        }
      },
      {
        "id": 3,
        "title": "Circuit Breaker Status",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "trading_circuit_breaker_active",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 1, "color": "red"}
            ]
          }
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "value": "0", "text": "TRADING"},
              {"type": "value", "value": "1", "text": "STOPPED"}
            ]
          }
        }
      },
      {
        "id": 4,
        "title": "Capital Utilization",
        "type": "gauge",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "trading_capital_utilization",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "max": 100,
            "min": 0,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 70, "color": "yellow"},
                {"value": 90, "color": "red"}
              ]
            },
            "unit": "percent"
          }
        }
      },
      {
        "id": 5,
        "title": "VIX Level",
        "type": "gauge",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 4},
        "targets": [
          {
            "expr": "trading_market_vix",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "max": 50,
            "min": 0,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 20, "color": "yellow"},
                {"value": 30, "color": "red"}
              ]
            },
            "unit": "none"
          }
        }
      },
      {
        "id": 6,
        "title": "Trades by Strategy",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "sum by (strategy) (trading_trades_total)",
            "legendFormat": "{{strategy}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 7,
        "title": "Win Rate by Strategy",
        "type": "bargauge",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 8},
        "targets": [
          {
            "expr": "trading_strategy_win_rate",
            "legendFormat": "{{strategy}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "max": 100,
            "min": 0,
            "unit": "percent"
          }
        }
      },
      {
        "id": 8,
        "title": "Positions by Strategy",
        "type": "bargauge",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 8},
        "targets": [
          {
            "expr": "trading_positions_open",
            "legendFormat": "{{strategy}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 9,
        "title": "Order Fill Rate",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "rate(trading_orders_filled_total[5m])",
            "legendFormat": "Fill Rate",
            "refId": "A"
          },
          {
            "expr": "rate(trading_orders_rejected_total[5m])",
            "legendFormat": "Reject Rate",
            "refId": "B"
          }
        ]
      },
      {
        "id": 10,
        "title": "Order Fill Time",
        "type": "heatmap",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "rate(trading_order_fill_time_seconds_bucket[5m])",
            "legendFormat": "{{le}}",
            "refId": "A",
            "format": "heatmap"
          }
        ]
      },
      {
        "id": 11,
        "title": "Market Data Quality",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "trading_market_data_stale",
            "legendFormat": "Stale Symbols",
            "refId": "A"
          },
          {
            "expr": "rate(trading_market_data_updates_total[1m])",
            "legendFormat": "Update Rate ({{symbol}})",
            "refId": "B"
          }
        ]
      },
      {
        "id": 12,
        "title": "Circuit Breaker Triggers",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "increase(trading_circuit_breaker_triggers_total[1h])",
            "legendFormat": "{{reason}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 13,
        "title": "ML Model Accuracy",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 32},
        "targets": [
          {
            "expr": "trading_ml_model_accuracy",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "max": 1,
            "min": 0,
            "unit": "percentunit",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 0.5, "color": "yellow"},
                {"value": 0.7, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 14,
        "title": "ML Predictions Distribution",
        "type": "piechart",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 32},
        "targets": [
          {
            "expr": "sum by (prediction) (trading_ml_predictions_total)",
            "legendFormat": "{{prediction}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 15,
        "title": "System Errors",
        "type": "timeseries",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 32},
        "targets": [
          {
            "expr": "rate(trading_system_errors_total[5m])",
            "legendFormat": "{{component}} - {{severity}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 16,
        "title": "API Response Time",
        "type": "heatmap",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 32},
        "targets": [
          {
            "expr": "rate(trading_api_request_duration_seconds_bucket[5m])",
            "legendFormat": "{{le}}",
            "refId": "A",
            "format": "heatmap"
          }
        ]
      }
    ],
    "refresh": "5s",
    "schemaVersion": 27,
    "style": "dark",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m"]
    }
  }
}

# Example .env for srb-algo (DO NOT commit real secrets)
# Copy to .env and fill values. Prefer using SSH keys and never paste passwords in public places.

# App settings
ENV=production
PYTHONUNBUFFERED=1
LOG_LEVEL=INFO

# Database (Postgres)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=your_db_name
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Trading API / brokerage (if used)
# UPSTOX_API_KEY=...
# UPSTOX_API_SECRET=...

# Circuit breaker override (for emergencies)
CIRCUIT_BREAKER_OVERRIDE_PASSWORD=replace_this_with_strong_password

# Other runtime params
ML_LIVE=false
MAX_RISK_PER_TRADE_PCT=0.5
STOP_LOSS_BASE_PCT=18
DECISION_INTERVAL_SECONDS=300

# Logging / data paths
DATA_DIR=${PWD}/data
LOG_DIR=${PWD}/data/logs
